{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": {
    "mysql": {
      "source": {
        "image": "mysql:8"
      },
      "ports": ["3306"],
      "env": {
        "MYSQL_ROOT_PASSWORD": "rFGqmfUlVUcBHwqXviwmqhRazfdNjAXX",
        "MYSQL_DATABASE": "railway",
        "MYSQL_USER": "root",
        "MYSQL_HOST": "${RAILWAY_PRIVATE_DOMAIN}",
        "MYSQL_PORT": "3306",
        "DATABASE_URL": "mysql://${MYSQL_USER}:${MYSQL_ROOT_PASSWORD}@${MYSQL_HOST}:${MYSQL_PORT}/${MYSQL_DATABASE}"
      }
    }
  }
}
